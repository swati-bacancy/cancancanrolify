<% if can? :create, Product %>
  <%= link_to 'create product', new_product_path %>
<% end %>
<table border="1">
  <tr>
    <th>name</th>
    <th>price</th>
    <th>description</th>
    <th>color</th>


  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.price%>
      </td>
      <td>
        <%= product.description%>
      </td>
      <td>
        <%= product.color%>
      </td>
      <td>
        <% if can? :read, product %>
          <%= link_to 'show', product_path(product)%>
        <% end %>
      </td>
      <td>
        <% if can? :update, product %>
          <%= link_to 'edit', edit_product_path(product)%>
        <% end %>
      </td>
      <td>
        <% if can? :destroy, product %>
          <%= link_to 'delete', product_path(product), method: :delete%>
        <% end %>
      </td>

    </tr>
  <% end %>
</table>
