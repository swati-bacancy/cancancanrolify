<%= link_to 'create product', new_product_path(@product) %>
<table border="1">
  <tr>
    <th>name</th>
    <th>price</th>
    <th>description</th>
    <th>color</th>


  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.price%>
      </td>
      <td>
        <%= product.description%>
      </td>
      <td>
        <%= product.color%>
      </td>
      <td>
        <%= link_to 'show', product_path(product)%>
      </td>
      <td>
        <%= link_to 'edit', edit_product_path(product)%>
      </td>
      <td>
        <%= link_to 'delete', product_path(product), method: :delete%>
      </td>

    </tr>
  <% end %>
</table>
